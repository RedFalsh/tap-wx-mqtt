            <image class="btn-img" src='/images/dev/tap-sw-offline.png'></image>
        </view>
        <view class="btn" hover-class="btn-press" bindtap="onTime">
            <image class="btn-img" src="/images/dev/time-white.png"></image>
        </view>
        <view class="btn" hover-class="btn-press" bindtap="onSet">
            <image class="btn-img" src="/images/dev/set.png"></image>
        </view>
    </view>
</view>
