<view class="page">
  <view class="dev-title">
    <image class='dev-image' src="/images/dev/tap-mid.png" />
    <text class='dev-name'>阀门</text>
  </view>
  <block wx:for="{{logs}}" wx:key="*this">
    <view class='date-row'>
      <view>
        <text class='date-day'>{{item[0].day}}</text>
        <text class='date-month'>{{item[0].month}}月</text>
      </view>
      <text class='date-week'>周 {{item[0].week}}</text>
    </view>
    <view class='log-list' wx:for="{{item}}" wx:key="*this">
      <view class='log-line-null'></view>
      <view class='log-circle-open' wx:if="{{item.msg=='开启'}}"></view>
      <view class='log-circle-close' wx:if="{{item.msg=='关闭'}}"></view>
      <view class='log-circle-half' wx:if="{{item.msg=='半开'}}"></view>
      <view class='log-line'>
        <view class='log-time'>{{item.time}}</view>
        <view class='log-msg'>{{item.msg}}</view>
      </view>
    </view>
  </block>
</view>
