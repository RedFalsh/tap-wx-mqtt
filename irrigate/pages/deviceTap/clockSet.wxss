.item-list {
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  margin-top: 5px;
  justify-content: space-around;
}
.item-icon {
  width: 32rpx;
  height: 32rpx;
}

.item-column {
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.item-title {
    width:20%;
    margin-left: 10px;
}

.item-btn {
  width: 128rpx;
  height: 64rpx;
  color: #a7a2a2;
  border: solid 1rpx #D0D0D0;
  border-radius: 32rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}

.item-btn-press {
  background: #D0D0D0;
  opacity: 0.7;
  transform: scale(1.1,1.1);
}

.item-btn-text {
  font-size: 64rpx;
}

.item-time {
    width:40%;
    margin-left: 10px;
    font-size: 30rpx;
}

.time {
    width: 100%;
    position: fixed;
    bottom: 30rpx;
}

.set-btn{
    width: 100%;
    margin-top: 20px;
}
.bottom {
  width: 100%;
  padding: 20px;
  line-height: 100px;
  background-color: #fff;
}
