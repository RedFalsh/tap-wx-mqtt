
.clock-row {
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  margin-top: 5px;
  justify-content: space-around;
}

.time{
  height: 100%;
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.value{
  align-items: center;
  font-size: 30rpx;
}

.period{
  align-items: center;
  font-size: 25rpx;
}

.add_btn{
    margin-top:20px;
    width: 100%;
}
.btn{
    margin-top: 30rpx;
    width: 450rpx;
    background: #14a1fd;
    color: #fff;
    border-radius: 70rpx;
}
